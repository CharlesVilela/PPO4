{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/publishBroker/publish/{{buscar._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="topico"  placeholder="Topico" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="mensagem" placeholder="Mensagem" class="form-control" autofocus>
                    </div>
                    <div class="botaoEnviar">
                        <button type="submit" class="btn btn-success btn-block">
                            Publicar
                        </button>
                    </div>

                    <div class="botaoCancelar">
                        <button type="" class="btn btn-danger btn-block">
                            Cancelar
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>